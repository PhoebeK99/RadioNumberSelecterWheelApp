<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="end"
    tools:context="com.example.csaper6.radionumberselecterwheelapp.MainActivity"
    android:background="#552309">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong"
            android:id="@+id/wrongButton2"
            android:checked="false" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/imageView6"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_menu_view" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Right"
            android:id="@+id/correct_button"
            android:paddingLeft="23dp"
            android:checked="false"
 />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong"
            android:id="@+id/wrongButton1"
            android:paddingLeft="50dp"
            android:checked="false"
/>

    </RadioGroup>

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second_number"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/check_button"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/check_button"
        android:layout_alignBottom="@+id/third_number"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD: 417"
        android:id="@+id/textView"
        android:layout_marginTop="35dp"
        android:layout_alignTop="@+id/third_number"
        android:layout_toStartOf="@+id/first_number" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_number"
        android:orientation="vertical"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/check_button"
        android:layout_toStartOf="@+id/third_number" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/third_number"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/radioGroup" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_below="@+id/imageView3"
        android:layout_toStartOf="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/second_number"
        android:layout_toEndOf="@+id/second_number"
        android:src="@android:drawable/sym_def_app_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/presence_busy" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/check_button"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/first_number"
        android:src="@android:drawable/ic_menu_myplaces" />

</RelativeLayout>
